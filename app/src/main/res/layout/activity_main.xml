<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="1246dp"
        android:background="#49931E"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-4dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="421dp"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/inthepocket" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@drawable/button_background"
            android:onClick="create_new_tournament"
            android:text="@string/create_new_tournament"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="600dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:background="@drawable/button_background"
            android:onClick="view_available_tournaments"
            android:text="@string/view_available_tournaments"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="600dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:backgroundTint="#FF5722"
            android:onClick="credits"
            android:text="@string/credits" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



